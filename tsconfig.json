{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/components",
    "src/pages",
    "src/lib",
    "src/stores",
    "src/App.tsx",
    "src/main.tsx",
    "src/index.css",
    "vite.config.ts"
  ],
  "exclude": [
    "src/app",
    "node_modules",
    "dist"
  ]
}

